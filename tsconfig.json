{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "filesGlob": [
    "./typings/**/*.d.ts",
    "src/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./typings/es6-promise/es6-promise.d.ts",
    "./typings/tsd.d.ts",
    "src/examples/DataLayer/DefaultApi.ts",
    "src/examples/DataLayer/RequestApi.ts",
    "src/examples/ModelLayer/HobbyModel.ts",
    "src/examples/ModelLayer/UserModel.ts",
    "src/examples/ResourceLayer/HobbyResource.ts",
    "src/examples/ResourceLayer/kernel.ts",
    "src/examples/ResourceLayer/UserResource.ts",
    "src/examples/ServiceLayer/example.ts",
    "src/lib/APILayer/API.ts",
    "src/lib/DataLayer/interfaces/DataInterface.ts",
    "src/lib/ModelLayer/Model/Model.ts",
    "src/lib/ModelLayer/Serializable/SerializableInterface.ts",
    "src/lib/Resourceful.ts",
    "src/lib/SourceLayer/Relational.ts",
    "src/lib/SourceLayer/Resourceful.ts",
    "src/lib/SourceLayer/Sourceful.ts"
  ]
}
